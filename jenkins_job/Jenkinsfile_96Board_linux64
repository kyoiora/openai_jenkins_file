node('ROCK960_linux'){
    dir('/home/rk/peter/openai_jenkins_file'){
        stage(' git pull jenkins file'){
            sh "pwd"
            sh '''#!/bin/bash
                    git pull
            '''

        }
    }

    dir('/home/rk/tengine'){
        stage('Git Pull'){
            sh "pwd"
            sh "hostname"
            sh '''#!/bin/bash
                    git pull
                    git checkout d0f8f109dd6ded3413933e1c86e2389a748a7656
            '''
        }
        stage('Make'){

            sh '''#!/bin/bash
                    make clean
                    make -j4
                    make install
            '''
        }
        stage('Make example'){

            sh '''#!/bin/bash
                cd examples
                rm -rf build
                mkdir build
                cd build && ../linux_build.sh && make -j4
            '''
        }
        stage(' Run SqueezeNet'){

            sh '''#!/bin/bash
                    ./build/tests/bin/bench_sqz -r1
            '''
        }

        stage(' Run bench_mobilenet'){

            sh '''#!/bin/bash
                    ./build/tests/bin/bench_mobilenet -r1
            '''
        }

    }

    dir('/home/rk/peter/openai_jenkins_file'){
        stage('Function test'){
            sh "pwd"
            sh "hostname"
            sh '''#!/bin/bash
                    git pull
                    pytest test.py -k "test_eval_linux6" --cmdopt="linuxFT" --targetdir="/home/rk/tengine" --variables=./test_var.json --html=report/Linux_96Board_Function_test.html --junit-xml=report/Linux_96Board_Function_test.xml --verbose || true
            '''
            junit allowEmptyResults: true, keepLongStdio: true, testResults: 'report/Linux_96Board_Function_test.xml'
            publishHTML([allowMissing: true, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'report/', reportFiles: 'Linux_96Board_Function_test.html', reportName: 'Linux_96Board_Function_test HTML Report', reportTitles: ''])
        }

        stage('Performance test'){
            sh "pwd"
            sh "hostname"
            sh '''#!/bin/bash
                    git pull
                    pytest test.py -k "test_eval_linux" --cmdopt="linuxPT3399" --targetdir="/home/rk/tengine" --variables=./test_var.json --html=report/Linux_96Board_Performance_test.html --junit-xml=report/Linux_96Board_Performance_test.xml --verbose || true
            '''
            junit allowEmptyResults: true, keepLongStdio: true, testResults: 'report/Linux_96Board_Performance_test.xml'
            publishHTML([allowMissing: true, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'report/', reportFiles: 'Linux_96Board_Performance_test.html', reportName: 'Linux_96Board_Performance_test HTML Report', reportTitles: ''])
        }
    }
}