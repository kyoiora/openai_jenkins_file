node('tinkerboard_linux'){
    dir('/home/linaro/peter/openai_jenkins_file'){
        stage(' git pull jenkins file'){
            sh "pwd"
            sh '''#!/bin/bash
                    git pull
            '''

        }
    }

    dir('/home/linaro/tengine'){
        stage('Git Pull'){
            sh "pwd"
            sh "hostname"
            sh '''#!/bin/bash
                git pull
                git checkout d0f8f109dd6ded3413933e1c86e2389a748a7656
            '''
        }
        stage('Make'){

            sh '''#!/bin/bash
                    make clean
                    make -j4
                    make install
            '''
        }
        stage('Make example'){

            sh '''#!/bin/bash
                cd examples
                rm -rf build
                mkdir build
                cd build && ../linux_build.sh && make -j4
            '''
        }
        stage(' Run SqueezeNet'){

            sh '''#!/bin/bash
                    ./build/tests/bin/bench_sqz -r1
            '''
        }

        stage(' Run bench_mobilenet'){

            sh '''#!/bin/bash
                    ./build/tests/bin/bench_mobilenet -r1
            '''
        }

    }

    dir('/home/linaro/peter/openai_jenkins_file'){
        stage(' Function test'){
            sh "pwd"
            sh "hostname"
            sh '''#!/bin/bash
                    git pull
                    pytest test.py -k "test_eval_linux" --cmdopt="linuxFT" --targetdir="/home/linaro/tengine" --variables=./test_var.json --html=report/Linux_TinkerBoard_Function_test.html --junit-xml=report/Linux_TinkerBoard_Function_test.xml --verbose || true
            '''
            junit allowEmptyResults: true, keepLongStdio: true, testResults: 'report/Linux_TinkerBoard_Function_test.xml'
            publishHTML([allowMissing: true, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'report/', reportFiles: 'Linux_TinkerBoard_Function_test.html', reportName: 'Linux_TinkerBoard_Function_test_HTML Report', reportTitles: ''])
        }
          stage('Performance test'){
              sh "pwd"
              sh "hostname"
              sh '''#!/bin/bash
                      git pull
                      pytest test.py -k "test_eval_linux" --cmdopt="linuxPT3288" --targetdir="/home/linaro/tengine" --variables=./test_var.json --html=report/Linux_TinkerBoard_Performance_test.html --junit-xml=report/Linux_TinkerBoard_Performance_test.xml --verbose || true
              '''
              junit allowEmptyResults: true, keepLongStdio: true, testResults: 'report/Linux_TinkerBoard_Performance_test.xml'
              publishHTML([allowMissing: true, alwaysLinkToLastBuild: true, keepAll: true, reportDir: 'report/', reportFiles: 'Linux_TinkerBoard_Performance_test.html', reportName: 'Linux_TinkerBoard_Performance_test_HTML Report', reportTitles: ''])
          }
    }

}